<ui:FluentWindow x:Class="Library_Management_System.Views.Windows.SplashScreenWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            mc:Ignorable="d"
            WindowStyle="None"
            
            ResizeMode="NoResize"
            ShowInTaskbar="False"
            WindowStartupLocation="CenterScreen"
            Height="300" Width="500" Topmost="True">

    <ui:Card Margin="20" Padding="20" Background="{DynamicResource SystemAccentBackgroundColorBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >

            <ui:TextBlock Text="Library Management System"
                          FontSize="24"
                          FontWeight="Bold"
                          TextAlignment="Center"/>

            <ui:TextBlock Text="by Lates"
                          Foreground="Gray"
                          FontSize="14"
                          Margin="0,0,0,5"
                          TextAlignment="Center"/>

            <ProgressBar IsIndeterminate="True" Width="300" Height="6"/>

        </StackPanel>
    </ui:Card>
</ui:FluentWindow>
