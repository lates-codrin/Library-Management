<Page
    x:Class="Library_Management_System.Views.Pages.OpenAIKeysPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Library_Management_System.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:Library_Management_System.ViewModels.Pages"
    xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
    mc:Ignorable="d"
    Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Page.DataContext>
        <vm:OpenAIKeysViewModel />
    </Page.DataContext>

    <Grid Margin="100,20,100,20">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch">

            <TextBlock FontSize="16" FontWeight="SemiBold" Text="Your OpenAI Key:" Margin="0,0,0,6" />

            <TextBox Text="{Binding OpenAIKey, UpdateSourceTrigger=PropertyChanged}"
                     Height="30"
                     FontSize="14"
                     Margin="0,0,0,12" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
                <Button Content="Save"
            Command="{Binding SaveCommand}"
            Width="100"
            Height="35"
            Margin="0,0,10,0" />

                <Button Content="Delete"
            Command="{Binding DeleteCommand}"
            Width="100"
            Height="35"
            Margin="0,0,0,0" />
            </StackPanel>
            <TextBlock FontSize="14" FontWeight="SemiBold" Text="Changes require relaunch of the application." Margin="0,0,0,6" />

            <vlc:VideoView x:Name="VideoView"
                           Height="300"
                           Margin="0,0,0,12" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                <Button Content="▶ Play" Click="PlayButton_Click" Margin="5" />
                <Button Content="⏸ Pause" Click="PauseButton_Click" Margin="5" />
                <Button Content="⏹ Stop" Click="StopButton_Click" Margin="5" />
            </StackPanel>

            <TextBlock Margin="0,12,0,0">
                <Hyperlink NavigateUri="https://github.com/lates-codrin/Library-Management-System#README"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    Need more help?
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>